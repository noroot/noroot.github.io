from numpy import *

from matplotlib.pyplot import *

def f(t):

    return t2*exp(t0.4)

t = linspace(0, 3, 51)

y = zeros(len(t))

for i in xrange(len(t)):

    y[i] = f(t[i])

y1 = y[::-1]

title("Life plot")

xlabel("Time")

ylabel("Memory")

grid()

plot(t, y1,color='r')

annotate("Less memory remains about cause of result", [0.5,35])

twinx()

ylabel("Result")

plot(t, y)

show()

